<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBoxesActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="209dp">


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnLetraGigante"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtModificar"
        app:layout_constraintVertical_bias="0.527" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnLetraMinuscula"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNegrita"
        app:layout_constraintTop_toBottomOf="@+id/txtModificar"
        app:layout_constraintVertical_bias="0.527" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnNegrita"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:text="Negrita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toEndOf="@+id/btnColorRojo"
        app:layout_constraintTop_toBottomOf="@+id/txtModificar"
        app:layout_constraintVertical_bias="0.527" />

    <EditText
        android:id="@+id/txtModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:hint="Escribe algo"
        android:inputType="text"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnColorRojo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Rojo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/btnLetraGigante"
        app:layout_constraintTop_toBottomOf="@+id/txtModificar"
        app:layout_constraintVertical_bias="0.527" />

    <Button
        android:id="@+id/btnReiniciar"
        android:text="Reiniciar"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnColorRojo"
        app:layout_constraintVertical_bias="0.503"
        android:backgroundTint="@color/color_principal"/>

</androidx.constraintlayout.widget.ConstraintLayout>